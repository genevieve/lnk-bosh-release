#!/bin/bash

export LOG_DIR=/var/vcap/sys/log/lnk
export RUN_DIR=/var/vcap/sys/run/lnk
export PIDFILE=/var/vcap/sys/run/lnk/lnk.pid

function main() {
  mkdir -p "${LOG_DIR}"
  mkdir -p "${RUN_DIR}"

  case "${1}" in
    "start")

      echo $$ > $PIDFILE

      <% lnkers = link('lnkers') %>

      <% lnkers.instances.each do |instance| %>
        echo <%= instance.index+1 %>=<%= instance.address %>:<%= lnkers.p('material') %> >> "${LOG_DIR}/ctl.log"
      <% end %>

      exec chpst -u vcap:vcap sleep 10s
      ;;

    "stop")
      if [ -f $PIDFILE ]; then
        kill -9 `cat $PIDFILE` || true
        rm -f $PIDFILE
      fi
      ;;

    *)
      echo "Usage: $0 {start|stop}"
      ;;

  esac
}

main ${@}
