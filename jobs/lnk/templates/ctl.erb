#!/bin/bash

function main() {
  local log_dir
  log_dir="/var/vcap/sys/log/lnk"

  mkdir -p "${log_dir}"

  case "${1}" in
    "start")
      <% lnkers = link('lnkers') %>

      <% lnkers.instances.each do |instance| %>
        echo <%= instance.index+1 %>=<%= instance.address %>:<%= lnkers.p('material') %> > "${log_dir}/ctl.log"
      <% end %>
      ;;

    "stop")
      ;;

    *)
      echo "Usage: $0 {start|stop}"
      ;;

  esac
}

main ${@}
