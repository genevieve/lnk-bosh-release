#!/bin/bash

export LOG_DIR=/var/vcap/sys/log/lnk
export RUN_DIR=/var/vcap/sys/run/lnk
export STORE_DIR=/var/vcap/store/lnk
export DATA_DIR=/var/vcap/data/lnk
export TMP_DIR=/var/vcap/data/lnk/tmp

for dir in $LOG_DIR $RUN_DIR $DATA_DIR $STORE_DIR $TMP_DIR; do
  mkdir -p ${dir}
  chown vcap:vcap ${dir}
  chmod 700 ${dir}
done

cp /var/vcap/jobs/lnk/config/id ${STORE_DIR}/

chown -R vcap:vcap ${STORE_DIR}
